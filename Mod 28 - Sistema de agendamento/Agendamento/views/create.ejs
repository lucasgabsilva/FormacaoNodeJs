<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+Wy2T8uE+xuPQDjBhQ+hp4+1tpa5ww6Zl+X" crossorigin="anonymous"></script>


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script src="jquery.mask.min.js"></script>

<script>
    $(document).ready(function() {
        $('.cpf').mask('000.000.000-00');
    });
</script>

</html>